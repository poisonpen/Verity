<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="150dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="256dp"
        android:padding="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
            android:id="@+id/chapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="English Word"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="158dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title of english word."
            android:id="@+id/translationtext"

            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Foreign Word"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="158dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title of foreign word."
            android:id="@+id/foreignText"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language" />
            <EditText
                android:id="@+id/languageText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
            android:hint="Enter language"/>
        </LinearLayout>

        <Button
            android:id="@+id/lastUpdated"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Last Updated"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="324dp" />

        <Button
            android:id="@+id/update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Update"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="324dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>